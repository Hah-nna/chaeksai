<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/fragment_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/record_to_my_registered_notes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my_registered_notes"
        app:layout_constraintTop_toBottomOf="@id/fragment_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/record_to_completed_finds_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="completed_finds"
        app:layout_constraintTop_toBottomOf="@id/fragment_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/record_to_my_registered_notes_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/record_to_bookmarkedNotes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bookmarkedNotes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/record_to_completed_finds_btn"
        app:layout_constraintTop_toBottomOf="@id/fragment_record"
        app:layout_constraintVertical_bias="0.501" />

</androidx.constraintlayout.widget.ConstraintLayout>