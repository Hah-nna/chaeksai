<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customTextViewFontStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="customBtnViewFontStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <style name="customEditTextViewFontStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <!-- 툴바 및 툴바 글자 스타일 -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:titleTextColor">@color/primary_text</item>
        <item name="navigationIcon">?homeAsUpIndicator</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextStyle</item>
    </style>

    <style name="ToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- 기본 MaterialButton 스타일 -->
    <style name="BaseButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- 버튼 공통 속성 -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent_text</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">10dp</item>
        <item name="android:fontFamily">@font/font_family</item>
    </style>

    <!-- 큰 버튼 스타일 -->
    <style name="LargeButtonStyle" parent="BaseButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- 작은 버튼 스타일 -->
    <style name="SmallButtonStyle" parent="BaseButtonStyle">
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="CustomBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/neutral_variant</item>
    </style>

    <style name="CustomMaterialCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>